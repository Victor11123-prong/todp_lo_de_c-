#include <iostream>

using namespace std;

int main () {

  int numero ; //esto tan se podra hacer con cualquier tipo de dato ya sea int, float, double, char, string, bool
  
 cout<< "ingrese un numero para la variable : ";

  cin>>numero; //guardamos el dato en la variable numero

  cout << "el numero que ingreso es : " <<numero <<endl;
  return 0;
}

/*
esto se usa para hacer un comentario que requiera varias lineas
*/
